<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Read_more_Testimonies">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/back_arrow2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/back"
                    android:backgroundTint="@color/yellow"
                    android:background="@color/yellow"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Testimony"
                    android:textColor="@color/yellow"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_pic"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/mary"
                    android:layout_margin="2dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="10dp"
                    >
                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Matia Mathias"
                        android:textColor="@color/yellow"
                        android:fontFamily="@font/roboto_bold"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Matia mathias"
                            android:textColor="@color/yellow"
                            android:fontFamily="@font/roboto_light"
                            android:textSize="12sp"
                            />

                        <TextView
                            android:id="@+id/created_at"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12/12/2023"
                            android:textColor="#958E8E"
                            android:fontFamily="@font/roboto_light"
                            android:textSize="12sp"
                            android:layout_alignParentEnd="true"
                            />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/story"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="I was able to get better grades which i prayed for in my O level and A level..."
                        android:textSize="16sp"
                        android:textColor="#3E3939"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/roboto_regular"
                        />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>