<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/yellow"
        >

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="St.LukeApp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:layout_marginVertical="8dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="'I am a catholic i am alive'"
            android:fontFamily="cursive"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:layout_marginVertical="5dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="2dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/mainlayout"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:layout_marginVertical="2dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <androidx.cardview.widget.CardView
                        android:id="@+id/hymns"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="30dp"
                        android:layout_margin="15dp"

                        >
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/musix"
                            android:layout_gravity="center_horizontal"
                            android:backgroundTint="@color/white"
                            android:layout_marginVertical="8dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Hymns"
                            android:textSize="10sp"
                            android:layout_gravity="bottom"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginBottom="5dp"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/holyrosary"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardElevation="8dp"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="30dp"
                        >
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/rosary"
                            android:layout_gravity="center_horizontal"
                            android:backgroundTint="@color/white"
                            android:layout_marginVertical="8dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Holy Rosary"
                            android:textSize="10sp"
                            android:layout_gravity="bottom"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginBottom="5dp"
                            />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <androidx.cardview.widget.CardView
                        android:id="@+id/ordermass"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="30dp"
                        android:layout_margin="15dp"
                        >
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/eucharist"
                            android:layout_gravity="center_horizontal"
                            android:backgroundTint="@color/white"
                            android:layout_marginVertical="8dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Order of Mass"
                            android:textSize="10sp"
                            android:layout_gravity="bottom"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginBottom="5dp"
                            />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/legion"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="8dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginVertical="8dp"
                            android:src="@drawable/mothermary"
                            android:backgroundTint="@color/white"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:gravity="center_horizontal"
                            android:text="Legion of Mary"
                            android:textSize="10sp"
                            android:textColor="@color/black"
                            android:layout_marginBottom="5dp"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <androidx.cardview.widget.CardView
                        android:id="@+id/novena"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="30dp"
                        android:layout_margin="15dp"
                        >
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/novenax"
                            android:layout_gravity="center_horizontal"
                            android:backgroundTint="@color/white"
                            android:layout_marginVertical="8dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Novena"
                            android:layout_gravity="bottom"
                            android:textSize="10sp"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/dailyreading"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardElevation="8dp"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="30dp"
                        >
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            android:backgroundTint="@color/white"
                            android:layout_marginVertical="8dp"
                            android:src="@drawable/reading"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Daily reading"
                            android:textSize="10sp"
                            android:layout_gravity="bottom"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginBottom="5dp"
                            />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:gravity="center"
                    android:textSize="8sp"
                    android:fontFamily="sans-serif"
                    android:text="All rights reserved @st.luke chaplaincy"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>