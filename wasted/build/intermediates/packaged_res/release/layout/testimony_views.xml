<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="5dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/mary"
            android:layout_margin="2dp"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp"
            >
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Matia Mathias"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_bold"
                android:textStyle="bold"
                android:textSize="16sp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Matia mathias"
                    android:textColor="#958E8E"
                    android:fontFamily="@font/roboto_light"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/created_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/12/2023"
                    android:textColor="#958E8E"
                    android:fontFamily="@font/roboto_light"
                    android:textSize="12sp"
                    android:layout_alignParentEnd="true"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/story"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I was able to get better grades which i prayed for in my O level and A level..."
                android:textSize="16sp"
                android:textColor="#3E3939"
                android:layout_marginTop="10dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:marqueeRepeatLimit="3"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/bottom_border"
        />


</LinearLayout>